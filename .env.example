# Coinbase CDP credentials
CDP_API_KEY=your_cdp_api_key_name
CDP_API_SECRET="-----BEGIN EC PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END EC PRIVATE KEY-----\n"
CDP_WALLET_ID=

# Trading configuration
TRADING_PAIR=BTC-USD
DRY_RUN=true
PRICE_POLL_SECONDS=60
Z_WINDOW_POINTS=24
Z_BUY_THRESHOLD=-2.0
Z_SELL_THRESHOLD=2.0
MAX_TRADE_FRACTION=0.02
DAILY_STOP_LOSS_FRACTION=0.05

# Logging (mapped to host by docker-compose volume)
LOG_DIR=logs
LOG_FILE=trading_log.txt

# Optional fallback for local simulation when provider balance is unavailable
SIMULATED_WALLET_USD=10000

# Optional: override price source URL template
# PRICE_API_URL_TEMPLATE=https://api.coinbase.com/v2/prices/{pair}/spot
